<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.test.inova.fashion.main.FirstPageActivity">

    <ImageView
        android:id="@+id/menu1"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@color/common_google_signin_btn_text_dark_disabled"
        android:src="@drawable/ic_format_align_left_black_24dp"
        app:layout_constraintTop_toTopOf="@+id/pager"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent" />


    <TextView
        android:id="@+id/description"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="11dp"
        android:layout_weight="1"
        android:text="Donec quam felis, ultricies nec, pellentesque eu, pretium quis, sem. Nulla consequat massa quis enim. "
        android:textColor="@color/common_google_signin_btn_text_dark_focused"
        android:textSize="14sp"
        app:layout_constraintHorizontal_bias="0.416"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/product_name" />

    <TextView
        android:id="@+id/product_name"
        android:layout_width="150dp"
        android:layout_height="31dp"
        android:text="  Leviâ€™s Jeans"
        android:textColor="@color/common_google_signin_btn_text_dark_focused"
        android:textStyle="bold"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/pager" />


    <ImageView
        android:id="@+id/share_float"
        android:layout_width="26dp"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|left"
        android:src="@drawable/like"
        app:layout_constraintTop_toTopOf="@+id/like"
        android:layout_marginTop="0dp"
        app:layout_constraintBottom_toBottomOf="@+id/like"
        android:layout_marginBottom="0dp"
        app:layout_constraintRight_toLeftOf="@+id/like"
        android:layout_marginRight="8dp" />

    <TextView
        android:id="@+id/like"
        android:layout_width="28dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.35"
        android:text="20K"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintRight_toLeftOf="@+id/bookmark_float"
        android:layout_marginRight="8dp"
        app:layout_constraintTop_toTopOf="@+id/bookmark_float"
        android:layout_marginTop="0dp" />


    <ImageView
        android:id="@+id/bookmark_float"
        android:layout_width="26dp"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|left"

        android:src="@drawable/dislike"
        app:layout_constraintTop_toTopOf="@+id/dislike"
        android:layout_marginTop="0dp"
        app:layout_constraintBottom_toBottomOf="@+id/dislike"
        android:layout_marginBottom="0dp"
        app:layout_constraintVertical_bias="0.0"
        app:layout_constraintRight_toLeftOf="@+id/dislike"
        android:layout_marginRight="8dp" />

    <TextView
        android:layout_width="29dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.18"
        android:text="4k"
        android:textSize="14sp"
        android:textStyle="bold"
        android:id="@+id/dislike"
        app:layout_constraintRight_toLeftOf="@+id/shair"
        android:layout_marginRight="8dp"
        app:layout_constraintTop_toTopOf="@+id/shair"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/shair"
        android:layout_marginBottom="8dp"
        app:layout_constraintVertical_bias="0.555" />

    <ImageView
        android:id="@+id/shair"
        android:layout_width="26dp"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|left"

        android:src="@drawable/ic_share_black_24dp"
        app:layout_constraintRight_toLeftOf="@+id/share"
        android:layout_marginRight="7dp"
        app:layout_constraintTop_toTopOf="@+id/share"
        android:layout_marginTop="0dp"
        app:layout_constraintBottom_toBottomOf="@+id/share"
        android:layout_marginBottom="0dp" />

    <TextView
        android:layout_width="29dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.18"
        android:text="1k"
        android:textSize="14sp"
        android:textStyle="bold"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:id="@+id/share"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/pager" />

    <me.relex.circleindicator.CircleIndicator
        android:id="@+id/indicator"
        android:layout_width="200dp"
        android:layout_height="48dp"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/menu1"
        tools:layout_editor_absoluteX="184dp"
        tools:layout_editor_absoluteY="34dp" />

    <android.support.v4.view.ViewPager
        android:id="@+id/pager"
        android:layout_width="0dp"
        android:layout_height="450dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginTop="6dp"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</android.support.constraint.ConstraintLayout>
